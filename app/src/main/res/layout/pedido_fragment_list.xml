<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pedidoListRecyclerView"
        android:name="br.com.dsx.vendamais.fragment.PedidoFragmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.dsx.vendamais.fragment.PedidoFragmentList"
        tools:listitem="@layout/pedido_fragment_row"/>

    <TextView
        android:id="@+id/semPedido"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:text="Nenhum pedido cadastrado." />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_add_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/float_button"
        app:srcCompat="@drawable/ic_add_registro"
        android:tint="@color/cardview_light_background"
        app:elevation="4dp"
        app:backgroundTint="@color/colorAccent2"
        />

</FrameLayout>



