<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            >

            <ImageView
                android:id="@+id/produtoFotoCardView"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="Foto do Produto"
                />

            <LinearLayout
                android:id="@+id/produtoAddRemoveItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/icon_remove_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:paddingLeft="1dp"
                    android:tint="@color/lineColor"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_remove_item_pedido"
                    />
                <EditText
                    android:id="@+id/produtoQtdCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:imeOptions="actionDone"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:id="@+id/icon_add_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:paddingRight="1dp"
                    android:tint="@color/lineColor"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_add_item_pedido"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginBottom="7dp"
            >

            <TextView
                android:id="@+id/produtoComplementoCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Produto XPTO Produto XPTO Produto XPTO Produto XPTO Produto XPTO Produto XPTO "
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:paddingRight="8dp"
                />

            <TextView
                android:id="@+id/produtoMarcaCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="MARCA"
                android:textSize="14sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/produtoPrecoCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/colorPrimary"
                android:text="R$ 10,00"
                android:textSize="16sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/produtoEstoqueCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="ESTOQUE: 45"
                android:textSize="14sp"
                android:layout_weight="1"
                />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>

</LinearLayout>
